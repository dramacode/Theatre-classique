        <castItem><role age="A" civil="M" id="DON FÉLIX DE FONSEQUE" rend="male" stat_amour="néant" statut="aristocrate" type="H" xml:id="DONFELIX">DON FÉLIX DE FONSEQUE</role>, amoureux de Lucie.</castItem>
        <castItem><role age="A" civil="M" id="DON GASPARD DE PADILLE" rend="male" stat_amour="néant" statut="aristocrate" type="H" xml:id="DONGASPARD">DON GASPARD DE PADILLE</role>, fanfaron, amoureux d'Hélène et de Lucie.</castItem>
        <castItem><role age="A" civil="M" id="DON PEDRO D'AVILA" rend="male" stat_amour="néant" statut="aristocrate" type="H" xml:id="DONPEDRO">DON PEDRO D'AVILA</role>.</castItem>
        <castItem><role age="A" civil="M" id="DON SANCHE" rend="male" stat_amour="néant" statut="aristocrate" type="H" xml:id="DONSANCHE">DON SANCHE</role>, oncle de Dorothée.</castItem>
        <castItem><role age="A" civil="F" id="HÉLÈNE" rend="female" stat_amour="néant" statut="bourgeois" type="H" xml:id="HELENE">HÉLÈNE</role>.</castItem>
        <castItem><role age="A" civil="F" id="LUCIE" rend="female" stat_amour="néant" statut="bourgeois" type="H" xml:id="LUCIE">LUCIE</role>.</castItem>
